@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --font-geist-sans: 'Inter', system-ui, -apple-system, sans-serif;
    --font-playfair: 'Playfair Display', Georgia, serif;
  }

  body {
    @apply bg-stone-50 text-stone-900;
  }
}

@layer components {
  .btn-primary {
    @apply bg-stone-900 text-white px-6 py-3 rounded-lg font-medium hover:bg-stone-800 transition-colors;
  }

  .btn-secondary {
    @apply bg-white text-stone-900 px-6 py-3 rounded-lg font-medium border-2 border-stone-900 hover:bg-stone-50 transition-colors;
  }

  .card {
    @apply bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow;
  }

  .input {
    @apply w-full px-4 py-3 border-2 border-stone-200 rounded-lg focus:border-stone-900 focus:outline-none transition-colors;
  }
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  background: #f5f5f4;
}

::-webkit-scrollbar-thumb {
  background: #a8a29e;
  border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
  background: #78716c;
}

/* Masonry grid */
.masonry-grid {
  display: flex;
  margin-left: -16px;
  width: auto;
}

.masonry-grid_column {
  padding-left: 16px;
  background-clip: padding-box;
}

.masonry-grid_column > div {
  margin-bottom: 16px;
}
